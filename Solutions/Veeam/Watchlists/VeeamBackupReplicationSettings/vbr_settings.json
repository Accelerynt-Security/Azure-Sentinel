{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Log Analytics Workspace"
            }
        }
    },
    "resources": [
        {
            "name": "[concat(parameters('workspaceName'), '/Microsoft.SecurityInsights/vbr_settings')]",
            "type": "Microsoft.OperationalInsights/workspaces/providers/Watchlists",
            "properties": {
                "displayName": "Veeam Backup & Replication Settings",
                "watchlistAlias": "vbr_settings",
                "source": "vbr_settings.csv",
                "description": "This watchlist defines Veeam Backup & Replication servers and the types of events that will be collected. To add a server, you must specify VbrServerName and baseUrl. Then you can run the Veeam-SetupConnectionsPlaybook, which will set the collection flags to true and create keyVaultIds if you leave those parameters empty; otherwise, it will use the values you specified to configure Hybrid Connections and Key Vault secrets.",
                "provider": "Custom",
                "isDeleted": false,
                "defaultDuration": "P1000Y",
                "contentType": "Text/Csv",
                "numberOfLinesToSkip": 0,
                "itemsSearchKey": "VbrServerName",
                "rawContent": "VbrServerName,baseUrl,isCollectingMalwareEvents,isCollectingBestPractices,isCollectingAuthEvents,keyVaultPasswordId,keyVaultUsernameId\r\nExampleServerName,https://ExampleServerName.n.local:9419,true,true,true,ExampleServerNamePassword,ExampleServerNameUsername\r\n"
            },
            "apiVersion": "2022-08-01"
        }
    ]
}